<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White stroke -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>
    <!-- Gradient fill -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/logo_color"
                android:startColor="#2196F3"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
