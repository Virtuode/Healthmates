<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Health Report"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/reportDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generated on: [Date]"
        android:textSize="14sp"
        android:textColor="@color/grey_text"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/basicInfoText"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="[Name, Age, Gender, Height, Weight, Contact]"
    android:textSize="16sp"
    android:layout_marginTop="8dp"
    android:maxLines="10"
    android:ellipsize="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/bloodGroupText"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="[Blood Group]"
    android:textSize="16sp"
    android:layout_marginTop="8dp"
    android:maxLines="10"
    android:ellipsize="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Health"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/currentHealthText"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="[Symptoms, Medications, Lifestyle, Exercise, Sleep]"
    android:textSize="16sp"
    android:layout_marginTop="8dp"
    android:maxLines="10"
    android:ellipsize="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical History"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/medicalHistoryText"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="[Conditions, Family History]"
    android:textSize="16sp"
    android:layout_marginTop="8dp"
    android:maxLines="10"
    android:ellipsize="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/emergencyContactText"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="[Name, Relation, Phone]"
    android:textSize="16sp"
    android:layout_marginTop="8dp"
    android:maxLines="10"
    android:ellipsize="none"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generated by HealthMate"
        android:textSize="12sp"
        android:textColor="@color/grey_text"
        android:gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>