<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Profile Picture"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textStyle="bold"/>

    <GridView
        android:id="@+id/gridViewImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/cancelBtngrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_button_with_shadow"
            android:textColor="@android:color/darker_gray"
            style="@style/ButtonsWithOffSide"
            android:fontFamily="@font/robot_bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:background="@drawable/rounded_button_with_shadow"
            android:textColor="@android:color/white"

            style="@style/LoginButton"
            android:fontFamily="@font/robot_bold"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</LinearLayout>
